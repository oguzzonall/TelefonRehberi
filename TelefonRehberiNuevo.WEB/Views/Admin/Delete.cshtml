@section scripts
{
    <script>
        function kisiSilAction() {
            var kisiId= @Model.KisiId;
            $.ajax({
                url: "/Admin/Delete/",
                type: "POST",
                data: { id: kisiId }
            }).done(function(e) {
                if (e.sonuc === true) {
                    toastr.success(e.mesaj,"Başarılı");
                    setTimeout(function () { window.location = "/Admin/Index"; },
                        3000);
                } else {
                    toastr.warning(e.mesaj,"Uyarı");
                }
            }).fail(function() {
                toastr.error("Sunucuyla olan bağlangtı kesildi.</br>Lütfen İnternetinizi kontrol ediniz.", "HATA");
            });
        }
    </script>
}
